<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.raywenderlich.instagramclient">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Instagram"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InstagramClient">
        <activity
            android:name=".uis.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".uis.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".uis.ProfileActivity"
            android:label="Your Profile"
            android:theme="@style/Theme.InstagramClientProfile"
            android:exported="false" />
        <activity
            android:name=".uis.NewPostActivity"
            android:exported="false" />
        <activity
            android:name=".uis.MainActivity"
            android:exported="false" />
    </application>

</manifest>