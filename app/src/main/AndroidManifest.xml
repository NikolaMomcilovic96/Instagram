<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.raywenderlich.instagramclient">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Instagram"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InstagramClient">

        <provider
            android:authorities="com.example.androidcamera.fileprovider"
            android:name="androidx.core.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/providerfile"/>
        </provider>

        <activity
            android:name=".uis.ChangeProfilePictureActivity"
            android:exported="false" />
        <activity
            android:name=".uis.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".uis.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".uis.ProfileActivity"
            android:exported="false"
            android:label="Your Profile"
            android:theme="@style/Theme.InstagramClientProfile" />
        <activity
            android:name=".uis.NewPostActivity"
            android:exported="false" />
        <activity
            android:name=".uis.MainActivity"
            android:exported="false" />
    </application>
</manifest>